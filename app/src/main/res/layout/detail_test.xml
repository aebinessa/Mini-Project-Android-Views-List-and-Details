<!-- res/layout/activity_transaction_details.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#212121"> <!-- Dark background color -->

    <!-- Transaction Date with Image -->
    <!-- White tint for icon -->

    <!-- White text color -->

    <!-- Transaction Type with Image -->

    <!-- White tint for icon -->

    <!-- White text color -->

    <!-- Transaction Amount with Image -->

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Transaction Date: 01/01/2024"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- White tint for icon -->

    <!-- White text color -->

    <!-- Account Balance with Image -->

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDate"
        android:layout_marginTop="155dp"
        android:text="Transaction Type: Credit"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageViewAmount"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/textViewType"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="-32dp"
        android:src="@drawable/amount_icon"
        android:tint="#FFFFFF" />

    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewType"
        android:layout_marginStart="37dp"
        android:layout_marginTop="229dp"
        android:layout_toEndOf="@id/imageViewAmount"
        android:text="Transaction Amount: $100.00"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- White tint for icon -->

    <!-- White text color -->

    <!-- Transaction Note with Image -->

    <ImageView
        android:id="@+id/imageViewBalance"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/textViewAmount"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="-31dp"
        android:src="@drawable/balance_icon"
        android:tint="#FFFFFF" />

    <TextView
        android:id="@+id/textViewBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAmount"
        android:layout_marginStart="36dp"
        android:layout_marginTop="113dp"
        android:layout_toEndOf="@id/imageViewBalance"
        android:text="Account Balance: $1,000.00"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- White tint for icon -->

    <ImageView
        android:id="@+id/imageViewNote"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/textViewBalance"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-35dp"
        android:src="@drawable/note_icon"
        android:tint="#FFFFFF" />

    <TextView
        android:id="@+id/textViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewBalance"
        android:layout_marginStart="-29dp"
        android:layout_marginTop="210dp"
        android:layout_toEndOf="@id/imageViewNote"
        android:text="Transaction Note: Sample transaction note."
        android:textColor="#FFFFFF"
        android:textSize="18sp" /> <!-- White text color -->
</RelativeLayout>
