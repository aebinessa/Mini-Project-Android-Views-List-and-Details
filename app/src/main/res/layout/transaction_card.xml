<!-- res/layout/item_transaction.xml -->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:background="#2C3E50"> <!-- Dark background color -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#34495E"> <!-- Slightly lighter background color -->

        <!-- Left Side (Date, Type, Note) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Date -->
            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="01/01/2024"
                android:textColor="#ECF0F1"
                android:textSize="18sp" /> <!-- Lighter text color -->

            <!-- Type -->
            <TextView
                android:id="@+id/textViewType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Credit"
                android:textSize="18sp"
                android:textColor="#3498DB"/> <!-- Sky Blue text color -->

            <!-- Note -->
            <TextView
                android:id="@+id/textViewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Account"
                android:textSize="18sp"
                android:textColor="#ECF0F1"/> <!-- Lighter text color -->
        </LinearLayout>

        <!-- Right Side (Amount, Balance) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <!-- Amount -->
            <!-- Lighter text color -->

            <!-- Balance -->

            <TextView
                android:id="@+id/textViewAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="$100.00"
                android:textColor="#ECF0F1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewBalance"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Balance: $1,000.00"
                android:textColor="#3498DB"
                android:textSize="18sp" /> <!-- Sky Blue text color -->
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>